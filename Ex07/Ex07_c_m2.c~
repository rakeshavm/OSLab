#include <sys/ipc.h> 
# define NULL 0 
#include <sys/shm.h> 
#include <sys/types.h> 
# include<unistd.h> 
# include<stdio.h> 
# include<stdlib.h> 
# include<string.h> 
#include <sys/wait.h> 
#include <stdio_ext.h> 

int main() 
{ 
  int pid; 
  char *a;
  int id,n,i;
  int flag=0;
  id=shmget(111,50, 00666);
  a=shmat(id,NULL,0); 
  printf("YOU: ");
  scanf("%s",a);
  char *s="#";
  strcat(s,a);
  strcpy(a,s);
  shmdt(a);
  char k='#';
  while(1)
    {
      while(k=='#')
	{
	  a=shmat(id,NULL,0);
	  k=a[0];
	  shmdt(a);
	}
      a=shmat(id,NULL,0);
      printf("Your friend: ");
      for(int i=1;a[i]!='\0';i++)
	print("%c",a[i]);
      printf("\n");
      printf("YOU: ");
      scanf("%s",a);
      
      if(strcmp("bye",a)==0)
	flag=1;
    
      char *s="#";
      strcat(s,a);
      strcpy(a,s);
      char k='#';

      if(flag==1)
	{
	  shmdt(a);
	  sleep(2);
	  shmctl(id, IPC_RMID,NULL);
	  exit(0);
	}
      shmdt(a);
      sleep(2);
      flag=0;
    }
}
